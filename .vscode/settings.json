{
  "idf.espIdfPath": "${env:HOME}/esp-idf-v5.5.1",
  "idf.toolsPath": "${env:HOME}/.espressif",
  "idf.pythonInstallPath": "/usr/bin/python3",
  "idf.flashType": "JTAG",
  "idf.port": "/dev/ttyACM0",
  "idf.monitorPort": "/dev/ttyACM0",
  "idf.customExtraVars": {
    "IDF_TARGET": "esp32s3"
  },
  "clangd.path": "${env:HOME}/.espressif/tools/esp-clang/16.0.1-fe4f10a809/esp-clang/bin/clangd",
  "clangd.arguments": [
    "--background-index",
    "--query-driver=${env:HOME}/.espressif/tools/riscv32-esp-elf/esp-13.2.0_20250707/riscv32-esp-elf/bin/riscv32-esp-elf-gcc",
    "--compile-commands-dir=${workspaceFolder}/build",
    "--header-insertion=never"
  ],
  "C_Cpp.clang_format_path": "${env:HOME}/.espressif/tools/esp-clang/16.0.1-fe4f10a809/esp-clang/bin/clang-format",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.formatting": "clangFormat",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "editor.formatOnSave": true,
  "files.associations": {
    "*.c": "c",
    "*.h": "c",
    "*.cpp": "cpp",
    "*.hpp": "cpp",
    "*.tcc": "c",
    "format": "c",
    "charconv": "cpp",
    "chrono": "cpp",
    "optional": "cpp",
    "ratio": "cpp",
    "system_error": "cpp",
    "array": "cpp",
    "functional": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "variant": "cpp",
    "string_view": "cpp",
    "cstdint": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "bitset": "cpp",
    "cctype": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "condition_variable": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "list": "cpp",
    "map": "cpp",
    "set": "cpp",
    "string": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "algorithm": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "random": "cpp",
    "regex": "cpp",
    "future": "cpp",
    "initializer_list": "cpp",
    "iomanip": "cpp",
    "iosfwd": "cpp",
    "iostream": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "mutex": "cpp",
    "new": "cpp",
    "numbers": "cpp",
    "ostream": "cpp",
    "semaphore": "cpp",
    "span": "cpp",
    "sstream": "cpp",
    "stdexcept": "cpp",
    "stop_token": "cpp",
    "streambuf": "cpp",
    "thread": "cpp",
    "cinttypes": "cpp",
    "typeinfo": "cpp",
    "fstream": "cpp"
  },
  "C_Cpp.clang_format_sortIncludes": true,
  "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/components/*/include",
    "${workspaceFolder}/managed_components/*/include"
  ],
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/build/compile_commands.json",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.path": "${env:HOME}/.espressif/tools/esp-clang/16.0.1-fe4f10a809/esp-clang/bin/clang-tidy",
  "C_Cpp.codeAnalysis.clangTidy.config": "",
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
  "clangd.checkUpdates": false,
  "cSpell.words": [
    "LOGI"
  ]
}